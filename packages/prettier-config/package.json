{
  "name": "@pplancq/prettier-config",
  "version": "1.2.9",
  "license": "MIT",
  "description": "pplancq prettier config",
  "author": "pplancq <paul.plancq@outlook.fr>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pplancq/dev-tools.git",
    "directory": "packages/prettier-config"
  },
  "scripts": {
    "lint:eslint": "eslint \"**/*.{js,mjs}\"",
    "lint:eslint:fix": "eslint \"**/*.{js,mjs}\" --fix",
    "lint:prettier": "prettier \"**/*.!(js|mjs)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier \"**/*.!(js|mjs)\" --write --ignore-unknown"
  },
  "files": [
    "bin",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/pplancq/dev-tools/issues"
  },
  "main": "index.js",
  "bin": {
    "init-prettier-config": "bin/init.js"
  },
  "keywords": [
    "prettier",
    "config"
  ],
  "dependencies": {
    "prettier-plugin-gherkin": "^3.1.3",
    "prettier-plugin-nginx": "^1.0.3",
    "prettier-plugin-properties": "^0.3.1",
    "prettier-plugin-sh": "^0.18.0"
  },
  "peerDependencies": {
    "prettier": "^3.1.1"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "prettier": "@pplancq/prettier-config",
  "lint-staged": {
    "*.(js|mjs)": "eslint --fix",
    "*.!(js|mjs)": "prettier --write --ignore-unknown"
  }
}
