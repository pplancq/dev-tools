{
  "name": "@pplancq/stylelint-config",
  "version": "5.0.0",
  "license": "MIT",
  "description": "pplancq stylelint config",
  "author": "pplancq <paul.plancq@outlook.fr>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pplancq/dev-tools.git",
    "directory": "packages/stylelint-config"
  },
  "scripts": {
    "lint:eslint": "eslint \"**/*.{js,mjs}\"",
    "lint:eslint:fix": "eslint \"**/*.{js,mjs}\" --fix",
    "lint:prettier": "prettier \"**/*.!(js|mjs)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier \"**/*.!(js|mjs)\" --write --ignore-unknown"
  },
  "files": [
    "bin",
    "rules",
    "index.js",
    "prettier.js",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/pplancq/dev-tools/issues"
  },
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./prettier": "./prettier.js"
  },
  "bin": {
    "init-stylelint-config": "bin/init.mjs"
  },
  "keywords": [
    "stylelint",
    "config"
  ],
  "dependencies": {
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1"
  },
  "peerDependencies": {
    "prettier": "^3.1.1",
    "stylelint": "^17.0.0",
    "stylelint-prettier": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    },
    "stylelint-prettier": {
      "optional": true
    }
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "eslint-plugin-prettier": "*",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=22"
  },
  "prettier": "@pplancq/prettier-config",
  "lint-staged": {
    "*.(js|mjs)": "eslint --fix",
    "*.!(js|mjs)": "prettier --write --ignore-unknown"
  }
}
