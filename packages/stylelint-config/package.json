{
  "name": "@pplancq/stylelint-config",
  "version": "4.0.4",
  "license": "MIT",
  "description": "pplancq stylelint config",
  "author": "pplancq <paul.plancq@outlook.fr>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pplancq/dev-tools.git",
    "directory": "packages/stylelint-config"
  },
  "scripts": {
    "lint:eslint": "eslint \"**/*.{js,mjs}\"",
    "lint:eslint:fix": "eslint \"**/*.{js,mjs}\" --fix",
    "lint:prettier": "prettier \"**/*.!(js|mjs)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier \"**/*.!(js|mjs)\" --write --ignore-unknown"
  },
  "files": [
    "bin",
    "rules",
    "index.js",
    "prettier.js",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/pplancq/dev-tools/issues"
  },
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./prettier": "./prettier.js"
  },
  "bin": {
    "init-stylelint-config": "bin/init.js"
  },
  "keywords": [
    "stylelint",
    "config"
  ],
  "dependencies": {
    "stylelint-config-pretty-order": "^0.7.0",
    "stylelint-config-recommended-scss": "^16.0.1",
    "stylelint-config-standard": "^39.0.0"
  },
  "peerDependencies": {
    "prettier": "^3.1.1",
    "stylelint": "^16.16.0",
    "stylelint-prettier": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    },
    "stylelint-prettier": {
      "optional": true
    }
  },
  "devDependencies": {
    "@pplancq/eslint-config": "*",
    "@pplancq/prettier-config": "^1.2.7",
    "eslint": "^9.35.0",
    "eslint-plugin-prettier": "*",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=22"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "prettier": "@pplancq/prettier-config",
  "lint-staged": {
    "*.(js|mjs)": "eslint --fix",
    "*.!(js|mjs)": "prettier --write --ignore-unknown"
  }
}
